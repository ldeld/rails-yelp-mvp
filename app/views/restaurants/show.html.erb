<h2><%= @restaurant.name %></h2>

<h3><%= @restaurant.category.capitalize %></h3>

<p><%= @restaurant.address %></p>

<p><%= @restaurant.phone_number %></p>

<h3>Reviews</h3>

<ul>
<% @restaurant.reviews.each do |review| %>
  <li>
  <h4><%= review.rating %> stars</h4>
  <%= review.content %>
  </li>
<% end %>
</ul>

<%= link_to "Write a new review", new_restaurant_review_path(@restaurant) %>
<br>
<%= link_to "Go back to restaurants", restaurants_path %>
